#:kivy 2.1.0

<HeizreglerWidget@BoxLayout>
    name: name
    curr_temp: curr_temp
    set_temp: set_temp
    up: up
    down: down
    orientation: 'vertical'
    MyLabel:
        id: name
    MyLabel:
        id: curr_temp
    Button:
        id: up
        text: '+'
        font_size: self.height * .15
        on_press: root.increase_temp()  # Verknüpfe den Button mit der Methode
    MyLabel:
        id: set_temp
    Button:
        id: down
        text: '-'
        font_size: self.height * .22
        on_press: root.decrease_temp()  # Verknüpfe den Button mit der Methode

<MyLabel@Label>
    size_hint_y: None
    height: self.parent.height * 0.1
    font_size: self.height * .3


